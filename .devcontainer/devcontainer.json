{
    "name": "Shell",
    "image": "mcr.microsoft.com/devcontainers/base:bookworm",
    "features": {
        "ghcr.io/hwaien/devcontainer-features/match-host-time-zone": {}
    },
    "runArgs": [
        "--name",
        "dotfiles-devcontainer"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh"
            }
        }
    }
}