{
  "autosave": "on_focus_change",
  "theme": "Primer",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "cursor_blink": true,
  "inlay_hints": {
    "enabled": true
  },
  "active_pane_modifiers": {
    "inactive_opacity": 0.7
  },
  "preferred_line_length": 120,
  "wrap_guides": [120],
  "agent": {
    "default_profile": "ask",
    "enabled": true,
    "version": "2",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.7-sonnet"
    }
  },
  "terminal": {
    "copy_on_select": true,
    "detect_venv": "off",
    "option_as_meta": true,
    "cursor_shape": "bar",
    "blinking": "on",
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "file_finder": {
    "modal_max_width": "large"
  },
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "minimap": {
    "show": "always"
  },
  "features": {
    "copilot": true,
    "edit_prediction_provider": "copilot"
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "diagnostics": {
    "inline": {
      "enabled": true,
      "max_severity": "error"
    }
  },
  "languages": {
    "JSON": {
      "preferred_line_length": 120
    },
    "Markdown": {
      "preferred_line_length": 300
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "rustfmt": {
          "extraArgs": ["+nightly"]
        },
        "check": {
          "command": "clippy"
        }
      },
      "enable_lsp_tasks": false
    }
  },
  "chat_panel": {
    "button": "never"
  },
  "title_bar": {
    "show_user_picture": false
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  }
}
