{
  "autosave": "on_focus_change",
  "theme": "Github Light",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 15,
  "cursor_blink": true,
  "inlay_hints": {
    "enabled": true
  },
  "active_pane_modifiers": {
    "inactive_opacity": 0.7
  },
  "preferred_line_length": 120,
  "wrap_guides": [120],
  "assistant": {
    "enabled": true,
    "version": "2",
    "enable_experimental_live_diffs": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-7-sonnet"
    }
  },
  "terminal": {
    "copy_on_select": true,
    "detect_venv": "off",
    "option_as_meta": true,
    "cursor_shape": "bar",
    "blinking": "on",
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "file_finder": {
    "modal_max_width": "large"
  },
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "features": {
    "copilot": true,
    "edit_prediction_provider": "copilot"
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "diagnostics": {
    "inline": {
      "enabled": true,
      "max_severity": "error"
    }
  },
  "languages": {
    "JSON": {
      "preferred_line_length": 120
    },
    "Markdown": {
      "preferred_line_length": 300
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "rustfmt": {
          "extraArgs": ["+nightly"]
        },
        "check": {
          "command": "clippy"
        }
      }
    }
  },
  "experimental.theme_overrides": {
    "terminal.background": "#ffffff",
    "elevated_surface.background": "#f6f8fa",
    "editor.document_highlight.read_background": "#d1d9e066",
    "editor.document_highlight.write_background": "#d1d9e066",
    "hint": "#818b98",
    "players": [
      {
        "selection": "#0969da33"
      }
    ]
  },
  "chat_panel": {
    "button": "never"
  },
  "show_user_picture": false,
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  }
}
