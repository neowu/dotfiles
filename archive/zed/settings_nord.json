{
  "icon_theme": "Catppuccin Latte",
  "autosave": "on_focus_change",
  "theme": "Nord",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 14,
  "cursor_blink": true,
  "inlay_hints": {
    "enabled": true
  },
  "active_pane_modifiers": {
    "inactive_opacity": 0.7
  },
  "preferred_line_length": 120,
  "wrap_guides": [120],
  // "proxy": "socks5://dev.internal:1080",
  "assistant": {
    "enabled": true,
    "version": "2",
    "enable_experimental_live_diffs": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    }
  },
  "terminal": {
    "copy_on_select": true,
    "detect_venv": "off",
    "option_as_meta": true,
    "cursor_shape": "bar",
    "blinking": "on",
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "file_finder": {
    "modal_max_width": "large"
  },
  "indent_guides": {
    "background_coloring": "indent_aware"
  },
  "features": {
    "copilot": true,
    "edit_prediction_provider": "copilot"
  },
  "chat_panel": {
    "button": "never"
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "languages": {
    "JSON": {
      "preferred_line_length": 120
    },
    "Markdown": {
      "preferred_line_length": 300
    },
    "TOML": {
      "language_servers": ["!taplo"]
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "rustfmt": {
          "extraArgs": ["+nightly"]
        },
        "check": {
          "command": "clippy"
        }
      }
    }
  },
  "experimental.theme_overrides": {
    "accents": ["#2e3440", "#3b4252", "#434c5e", "#4c566a", "#5c6578", "#6b7384", "#78808f", "#848c99"],
    "predictive": "#6f788a",
    "editor.active_line.background": "#97acd633",
    "syntax": {
      "punctuation": {
        "color": "#81a1c1"
      },
      "punctuation.bracket": {
        "color": "#81a1c1"
      },
      "variable.parameter": {
        "color": "#d8dee9"
      },
      "attribute": {
        "color": "#d08770"
      }
    },
    "players": [
      {
        "cursor": "#d8dee9",
        "selection": "#97acd633"
      }
    ]
  }
}
